<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">

<listeners>
<listener class-name="Utilities.listener" />
</listeners>
  <test name="ChromeTest">
  <classes>
  		<class name="TestCase.InvalidTestProductSearch" />
	 <class name="TestCase.TestAddToCart" />
	 <class name="TestCase.TestDifferentProductName" />
	 <class name="TestCase.TestInvalidCartDetails" />
